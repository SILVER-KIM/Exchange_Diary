<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#FFFF"
    android:orientation="horizontal">

    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="#CBF0F1"
        android:id="@+id/friend_image"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"/>

    <ProgressBar
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_gravity="center"
        android:layout_marginTop="33dp"
        android:layout_marginLeft="37dp"
        android:id="@+id/pbLogin"/>



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/friend_Name"
        android:text="친구 닉네임"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="35dp"
        android:textColor="#000000"
        android:layout_toRightOf="@id/friend_image"
        android:textSize="17dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:id="@+id/friend_miniMESSAGE"
        android:text="친구 상태메세지"
        android:layout_below="@id/friend_Name"
        android:layout_alignLeft="@id/friend_Name"
        android:layout_marginRight="30dp"
        android:textSize="13sp"/>

    <Button
        android:id="@+id/diaryBTN"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:background="@drawable/diary"
        android:backgroundTint="@color/colorBlack"
        android:layout_marginTop="35dp"
        android:layout_alignLeft="@id/friend_Name"
        android:layout_marginLeft="250dp"
        android:textSize="13sp"/>

</RelativeLayout>